{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["*/src"],
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/*/lib-esm",
    "packages/*/lib",
    "packages/*/src/**/*.stories.tsx"
  ],
}
